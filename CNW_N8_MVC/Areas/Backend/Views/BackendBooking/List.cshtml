
@using CNW_N8_MVC.Models;
@model dynamic

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Backend/Views/Shared/Backend.cshtml";
}


    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header"><i class="fa fa-align-justify"></i> Danh sách đặt booking Hotel</div>
                <div class="card-body">
                    <table class="table table-responsive-sm">
                        <thead>
                            <tr>
                                <th>Tên hotel</th>
                                <th>Tên khách hàng</th>
                                <th>Email khách hàng</th>
                                <th>Từ ngày</th>
                                <th>Đến ngày</th>
                                <th>TT D.Vụ</th>
                                <th>Tổng tiền</th>
                                <th>Trạng Thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (hotel_booking it in Model.hotel_bookings)
                            {
                            <tr>
                                <td>@it.hotel.hotel_name </td>
                                <td>@it.customer_name</td>
                                <td>@it.customer_email</td>
                                <td>@it.from_date</td>
                                <td>@it.to_date</td>
                                <td>@it.thanhTienDichVu</td>
                                <td>@it.total_price</td>
                                <td>@it.status_check</td>
                                @if (it.status_check == "Đang Xử Lý")
                                {
                                    <td><a href="@Url.Action("ConfirmHotelBooking","BackendBooking",new { @id = it.id})"> X.Nhận </a></td>
                                    <td><a class="text-warning" href="@Url.Action("DeleteHotelBooking","BackendBooking",new { @id = it.id})"> Hủy </a></td>
                                }
                                else
                                {
                                    <td><a class="text-warning" href="@Url.Action("DeleteHotelBooking","BackendBooking",new { @id = it.id})"> Hủy </a></td>
                                }

                            </tr>
                            }
                        </tbody>
                    </table>
                    
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header"><i class="fa fa-align-justify"></i> Danh sách đặt booking Homestay</div>
